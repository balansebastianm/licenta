@{
    ViewData["Title"] = "Doctor";
}
<section class="vh-auto container-fluid d-flex">
    <nav class="navbar navbar-expand navbar-dark fixed-top" style="background-color: rgba(2,84,152,255);">
        <div class="container-fluid">
            <a href="#" class="navbar-brand fw-bold" style=" color:white">Bun venit, @User.Identity.Name.ToString()</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <a href="../Account/Logout" class="btn btn-raised shadow my-button btn-outline-light btn-lg px-5 margin" style=" color:white; margin-bottom: 5px; margin-top: 5px; margin-left:10px">Log Out</a>
                </div>
            </div>
        </div>
    </nav>
</section>
<section class="vh-auto">
    <div class="container h-auto">
        <div class="row d-flex" style="padding-top: 100px">
            <div class="row d-flex justify-content-center align-items-center">
                <div class=" col-12 col-md-8 col-lg-6 col-xl-5 justify-content-center align-content-center align-items-center" style="padding-top:120px;">
                    <div class="card text-white cardset" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class=" mt-md-4">
                                <h2 class="fw-bold mb-1 text-uppercase" style="padding-bottom:15px">Bun venit!</h2>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <a href="Doctor\TrimiteAdeverinta" class="btn btn-raised shadow my-button btn-outline-light btn-lg px-5" style="margin-bottom:20px; width:310px" type="submit">Trimite Adeverinta</a>
                                <a href="Doctor\GenereazaAdeverinta" class="btn btn-raised shadow my-button btn-outline-light btn-lg px-5" style="margin-bottom:20px; width:310px" type="button">Genereaza Adeverinta</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .cardset {
        background: rgba(2,84,152,255);
        border-color: black;
    }

    body {
        background: rgb(237,237,237);
        background: linear-gradient(90deg, rgba(237,237,237,1) 0%, rgba(0,212,255,1) 59%, rgba(12,18,196,0.850577731092437) 100%);
    }

    .btn-raised {
        transition: box-shadow .4s cubic-bezier(.25, .8, .25, 1), transform .4s cubic-bezier(.25, .8, .25, 1);
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .5)
    }

        .btn-raised:not([disabled]):active,
        .btn-raised:not([disabled]):focus,
        .btn-raised:not([disabled]):hover {
            box-shadow: 0 12px 12px 0 rgba(0, 0, 0, 1);
            transform: translate3d(0, -3px, 0);
            background-color: rgba(0,143,254,255);
            border-color: rgba(2,84,152,255);
        }

    .button {
        background-color: rgba(2,84,152,255);
        border-color: rgba(0,143,254,255);
    }
</style>